<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_course"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aprilcal.signsystem.Activity.CreateCourseActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="86dp">

        <TextView
            android:text="课程名称"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textSize="24sp"
            android:textAlignment="center"
            android:gravity="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_weight="1"
            android:textSize="24sp"
            android:id="@+id/course_name_edit_text" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="86dp">

        <TextView
            android:text="课程人数"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textSize="24sp"
            android:textAlignment="center"
            android:gravity="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_weight="1"
            android:textSize="24sp"
            android:id="@+id/course_total_number_edit_text" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="86dp">

        <TextView
            android:text="WiFi名称"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textSize="24sp"
            android:textAlignment="center"
            android:gravity="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_weight="1"
            android:textSize="24sp" />
    </LinearLayout>

    <Button
        android:text="添加人员名单"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_list_button" />

    <Button
        android:text="创建课程"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create_course_button" />

    <Button
        android:text="取消"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_button" />
</LinearLayout>
