<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aprilcal.signsystem.Activity.SignDetailActivity"
    android:weightSum="1">

    <TextView
        android:text="2013/3/20"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_height="57dp"
        android:id="@+id/sign_detail_title_text_view" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="57dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="24sp"
            android:text="应到人数" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="24sp"
            android:text="87人"
            android:id="@+id/sign_detail_total_number_text_view" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="57dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="24sp"
            android:text="实到人数" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="24sp"
            android:text="81人"
            android:id="@+id/sign_detail_actual_number_text_view" />
    </LinearLayout>
    <TextView
        android:text="以下是缺席人员名单："
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:textAlignment="center"
        android:textSize="24sp"
        android:id="@+id/test_text_view" />
</LinearLayout>
