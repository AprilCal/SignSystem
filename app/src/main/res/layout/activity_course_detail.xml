<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_course_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aprilcal.signsystem.Activity.CourseDetailActivity">

    <Button
        android:text="开始签到"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/start_sign_button" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="145dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/sign_linear_layout" />
    </ScrollView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:id="@+id/sign_list_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sign_scroll_view">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sign_scroll_linear_layout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="0.07">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView11"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:text="2018/3/29 91/88(可点)" />

                <ImageView
                    app:srcCompat="@android:drawable/ic_menu_delete"
                    android:id="@+id/del_image1"
                    android:layout_gravity="center"
                    android:layout_height="35dp"
                    android:layout_width="80dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="0.07">

                <TextView
                    android:text="2018/3/30 91/87"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView12"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:gravity="center" />
                <ImageView
                    app:srcCompat="@android:drawable/ic_menu_delete"
                    android:id="@+id/del_image2"
                    android:layout_gravity="center"
                    android:layout_height="35dp"
                    android:layout_width="80dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="0.07">

                <TextView
                    android:text="2018/3/30 91/87"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView13"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:gravity="center" />
                <ImageView
                    app:srcCompat="@android:drawable/ic_menu_delete"
                    android:id="@+id/del_image3"
                    android:layout_gravity="center"
                    android:layout_height="35dp"
                    android:layout_width="80dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="0.07">

                <TextView
                    android:text="2018/3/30 91/87"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView8"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:gravity="center" />
                <ImageView
                    app:srcCompat="@android:drawable/ic_menu_delete"
                    android:id="@+id/del_image4"
                    android:layout_gravity="center"
                    android:layout_height="35dp"
                    android:layout_width="80dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="0.07">

                <TextView
                    android:text="2018/3/30 91/87"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView14"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:gravity="center" />
                <ImageView
                    app:srcCompat="@android:drawable/ic_menu_delete"
                    android:id="@+id/del_image5"
                    android:layout_gravity="center"
                    android:layout_height="35dp"
                    android:layout_width="80dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
