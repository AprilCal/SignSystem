<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_bind_info"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.aprilcal.signsystem.Activity.BindInfoActivity"
android:orientation="vertical">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="86dp">

    <TextView
        android:text="姓名"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:textSize="24sp"
        android:textAlignment="center"
        android:gravity="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_weight="1"
        android:textSize="24sp"
        android:id="@+id/bind_info_student_name_edit_text" />
</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="86dp">

    <TextView
        android:text="学号"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:textSize="24sp"
        android:textAlignment="center"
        android:gravity="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_weight="1"
        android:textSize="24sp"
        android:id="@+id/bind_info_school_id_edit_text" />
</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="86dp">

    <TextView
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:textSize="24sp"
        android:textAlignment="center"
        android:gravity="center"
        android:text="学校" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_weight="1"
        android:textSize="24sp"
        android:id="@+id/bind_info_school_name_edit_text" />
</LinearLayout>

<Button
    android:text="绑定信息"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bind_info_bind_button" />

<Button
    android:text="取消"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bind_info_cancel_button" />
</LinearLayout>
